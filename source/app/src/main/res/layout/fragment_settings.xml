<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <!-- 상단 설정 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- 메뉴 목록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 계정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account"
                android:contentDescription="계정 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계정"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/account_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

        <!-- 화면 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_screen"
                android:contentDescription="화면 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="화면"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/screen_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

        <!-- 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_alarm"
                android:contentDescription="알림 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="알림"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/notification_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

        <!-- 공지사항 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_announcement"
                android:contentDescription="공지사항 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="공지사항"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/announcement_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

        <!-- 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_information"
                android:contentDescription="정보 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정보"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/information_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

        <!-- 문의하기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_inquire"
                android:contentDescription="문의하기 아이콘" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문의하기"
                android:textSize="20sp"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/inquire_arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="화살표 아이콘" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
